{
    "variables": {
        "http_dir": "{{env `AZT_PACKER_HTTPDIR`}}",
        "iso_url": "{{env `AZT_ARCHISO`}}",
        "iso_checksum": "{{env `AZT_ARCHISO_SHA`}}",
        "iso_checksum_type": "sha1",
        "base_image_name": "{{env `AZT_BASE_IMAGE_NAME`}}",
        "base_image_output_dir": "{{env `AZT_BASE_IMAGE_OUTPUT_DIR`}}"
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "http_directory": "{{user `http_dir`}}",
            "boot_wait": "5s",
            "headless": false,
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/poweroff.timer<enter><wait>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/mirrorlist<enter><wait>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/setup-test-image.sh<enter><wait>",
                "/usr/bin/bash ./setup-test-image.sh<enter>"
            ],
            "disk_size": 122880,
            "ssh_username": "root",
            "ssh_password": "azfstest",
            "shutdown_command": "systemctl start poweroff.timer",
            "vm_name": "{{user `base_image_name`}}",
            "output_directory": "{{user `base_image_output_dir`}}"
        }
    ]
}
